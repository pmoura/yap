#define SWITCH(Contype, G)     \
	( Contype == mysql ->      \
	  myddas_my:my_##G                 \
	;                          \
	  Contype == sqlite3 ->    \
	  myddas_sqlite3:sqlite3_##G            \
	;                          \
	  Contype == postgres ->   \
	  myddas_postgres:postgres_##G            \
	;                          \
	  Contype == odbc ->       \
	  myddas_odbc:odbc_##G               \
	)

	#define C_SWITCH(Contype, G)     \
		( Contype == mysql ->      \
		  myddas_my:c_my_##G                  \
		;                          \
		  Contype == sqlite3 ->    \
		  myddas_sqlite3:c_sqlite3_##G             \
		;                          \
		  Contype == postgres ->   \
		  myddas_postgres:c_postgres_##G           \
		;                          \
		  Contype == odbc ->       \
		  myddas_odbc:c_odbc_##G               \
		)

